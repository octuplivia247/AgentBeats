{
  "agent": {
    "name": "Smart Home Purple Agent",
    "description": "LLM-powered smart home controller with MCP tool integration",
    "version": "2.0.0",
    "url": "http://localhost:9000",
    "agent_card_path": "/.well-known/agent-card.json"
  },
  "controller": {
    "port": 9010,
    "host": "0.0.0.0",
    "proxy_enabled": true,
    "auto_restart": true,
    "health_check_interval": 30,
    "max_restart_attempts": 3
  },
  "launcher": {
    "script_path": "./run.sh",
    "startup_timeout": 60,
    "shutdown_timeout": 30,
    "working_directory": ".",
    "environment_variables": {
      "AGENT_PORT": "9000",
      "MCP_SERVER_URL": "http://localhost:9006"
    }
  },
  "logging": {
    "level": "INFO",
    "file": "logs/controller.log",
    "format": "json"
  },
  "monitoring": {
    "enabled": true,
    "metrics_port": 9011,
    "dashboard_enabled": true
  }
}

